while True:
    print('Вас привествует демо платного калькулятора с nintendo switch.')
    num1 = int(input('Введите первое число: '))
    num2 = int(input('Введите второе число: '))
    oper = input('Введите оперпцию которую выхотит произвести или если вы закончили пользоваться калькулятором нажмите 0: ')
    res = 0
    if oper == '+':
        res = num1 + num2
    elif oper == '-':
        res = num1 - num2
    elif oper == '*':
        res = num1 * num2
    elif oper == '/':
        if num2 == 0:
            print('Извените я не хочу чтобы вы уничтажали вселенную, поэтому я заблокировал операцию деления на ноль. Мне правда жаль что помешал вашим планам.')
        res = num1 / num2
    elif oper == '0':
        print('Спасибо что воспользовались калькулятором да прибудет с вами сила.')
        break
    else:
        print(f'Извините, но {oper} это не символ операции как +, -, * и /. Если вы хотите прекратить операцию наберите 0 в операциях')
    if res == 42:
        print('42 - ответ на основной вопрос жизни, вселенной и вообще')
    print(res)
